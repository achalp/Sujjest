<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tota.sujjest.RecommendedFragment"
    tools:showIn="@layout/activity_main">



            <ImageView
                android:id="@+id/imageViewRecommended"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="1dp"
                android:background="#000" />


            <TextView
                android:id="@+id/textRecBizName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/imageViewRecommended"
                android:text="PlaceHolder"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/textRecAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textRecBizName"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/imageViewRecommended"
                android:text="PlaceHolder"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/textRecNumReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageViewRecommended"
                android:layout_below="@+id/textRecAddress"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="PlaceHolder"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFF" />


            <TextView
                android:id="@+id/textRecCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textRecAddress"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/textRecNumReviews"
                android:gravity="right"
                android:text="PlaceHolder"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFF" />
    <TextView
        android:id="@+id/textRecUserIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewRecommended"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_orange_dark" />
    <TextView
        android:id="@+id/textRecUserFeel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageViewRecommended"
        android:layout_toRightOf="@+id/textRecUserIndex"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_green_dark" />

</RelativeLayout>


