
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.tota.sujjest.RecommendedFragment"
tools:showIn="@layout/activity_main">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageViewRecommended"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="1dp"
            android:background="#000" />


        <TextView
            android:id="@+id/textRecBizName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageViewRecommended"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textRecAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRecBizName"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageViewRecommended"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textRecNumReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageViewRecommended"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF" />


        <TextView
            android:id="@+id/textRecCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageViewRecommended"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textRecNumReviews"
            android:gravity="right"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageViewRecommended2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="1dp"
            android:background="#000" />




        <TextView
            android:id="@+id/textRecBizName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"

            android:layout_toRightOf="@+id/imageViewRecommended2"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textRecAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRecBizName2"
            android:layout_gravity="center"

            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageViewRecommended2"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textRecNumReviews2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageViewRecommended2"

            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF" />


        <TextView
            android:id="@+id/textRecCost2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageViewRecommended2"

            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textRecNumReviews2"
            android:gravity="right"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageViewRecommended3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="1dp"
            android:background="#FFF" />



        <TextView
            android:id="@+id/textRecBizName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"

            android:layout_toRightOf="@+id/imageViewRecommended3"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textRecAddress3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRecBizName3"
            android:layout_gravity="center"

            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/imageViewRecommended3"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textRecNumReviews3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageViewRecommended3"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF" />


        <TextView
            android:id="@+id/textRecCost3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageViewRecommended3"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textRecNumReviews3"
            android:gravity="right"
            android:text="PlaceHolder"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFF" />
    </RelativeLayout>
</LinearLayout>

</RelativeLayout>
